/////////////////////////
//    TASKS STYLES    //
///////////////////////

task-btn-bgcolor = white
// common to all tasks
div[ data-type = "task" ]
    background-color:#F3F3F3
// on done tasks, color for the line-through
div[ data-state = "done" ]
    text-decoration:line-through
    color : rgba(55, 55, 55, .25)
// force the color of text to be different of line-through
div[ data-state = "done" ] > span
    color:#777777

.CNE_task_btn
    width: 9px
    line-height:18px
    display: inline-block
    position:relative
    margin-right: 7px
    margin-top: -1px
    background-color:task-btn-bgcolor
    border: 1px solid basecolor
    color: task-btn-bgcolor
    box-shadow: none
    text-shadow: none
    border-radius: 0
    font-family: main
    padding: 0px
    cursor: pointer

div[ data-state = "done" ] > .CNE_task_btn
    background-color:#E6E6E6
    border-color:#B1B1B1

.CNE_task_btn:hover
    background: actioncolor + 20%
    border-color: actioncolor + 20%
    font-weight: bold

.CNE_task_btn::-moz-selection
    color: task-btn-bgcolor
    background: task-btn-bgcolor

.CNE_task_btn::selection
    color: task-btn-bgcolor
    background: task-btn-bgcolor



