// UI

// app ui
body
  background-color: #EEEEEE

#main-div
  display: block
  position: absolute
  top:50px
  right:0
  left:0
  bottom:0

.monWell
  border: 1px solid rgba(0, 0, 0, 0.12)
  border-radius: 7px 7px 7px 7px
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset
  padding: 0px
  margin: 0px
  position:absolute
  top:0px
  right:0
  left:0
  bottom:7px

#well-editor
  background-color: #333333
  left:7px

#well-result
  background-color: #ffffff
  right:7px

#col-wrap
  width: 100%
  height: 100%

#generalBtnBarDiv
  width:700px
  display:inline-block
  padding-left: 7px

#contentSelectDiv
  position: relative
  top:-15px
  display:inline-block

#editorDiv
  position: absolute
  top:0px
  right:0
  left:0
  bottom:0

#editorContent
  position: absolute
  top:50px
  right:8px
  left:8px
  bottom:15px

#editorIframe
  width: 100%
  height: 100%
  overflow: hidden
  display: inline-block
  font-size: 13px
  border:0
  width:100%
  height:100%
  margin-bottom: 9px

#resultDiv
  width:100%
  height:100%

#resultContent
  position: absolute
  top:50px
  right:8px
  left:8px
  bottom:15px

#resultText
  background-color: #E9EEF2

#editorBtnBar
  padding-left: 10px

#resultBtnBar
  position:absolute
  left:8px
  
.ui-layout-resizer-open:hover
  background white

#col-wrap > .ui-layout-resizer
  background-color: #eeeeee
  border-right: 1px solid #eeeeee
  border-left: 1px solid #eeeeee

.ui-layout-resizer
  background-color: white
  border-right: 1px solid white
  border-left: 1px solid white
  
.ui-layout-toggler
  background-color: white
  border: 0px
  position: absolute
  right: 0px

.ui-layout-resizer-open:hover .ui-layout-toggler
  background-color: #BFBFBF