// UI
bgcolor = #818181
// app ui
body
  background-color: bgcolor

#main-div
  display: block
  position: absolute
  top:50px
  right:0
  left:0
  bottom:0

.monWell
  border: 1px solid rgba(0, 0, 0, 0.12)
  border-radius: 7px 7px 7px 7px
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset
  padding: 0px
  margin: 0px
  position:absolute
  top:0px
  right:0
  left:0
  bottom:7px

#well-editor
  background-color: #333333
  left:7px

#well-result
  background-color: #ffffff
  right:7px

#col-wrap
  width: 100%
  height: 100%

#generalBtnBarDiv
  width:700px
  display:inline-block
  padding-left: 7px

.btn-bar-editor
  display:inline-block

#contentSelectDiv
  position: relative
  top:-15px
  display:inline-block

#editorDiv
  position: absolute
  top:0px
  right:0
  left:0
  bottom:0

#editorContent
  position: absolute
  top:48px
  right:8px
  left:8px
  bottom:15px

#editorIframe
  width: 100%
  height: 100%
  overflow: hidden
  display: inline-block
  position: absolute
  font-size: 13px
  border:0
  width:100%
  height:100%
  margin-bottom: 9px


#editorIframe2
  width: 100%
  height: 100%
  overflow: hidden
  display: inline-block
  position: absolute
  font-size: 13px
  border:0
  width:49%
  right:0
  height:100%
  margin-bottom: 9px

#resultDiv
  width:100%
  height:100%

#resultContent
  position: absolute
  top:50px
  right:8px
  left:8px
  bottom:15px

#resultTextDiv
  position   :absolute
  top        :48px
  right      :8px
  left       :8px
  bottom     :15px
  overflow-y :auto
  overflow-x :hidden
  background-color: #E9EEF2

#resultText
  padding:0
  margin:0
  border:0
  font-size:12px
  background-color: #E9EEF2

#recordings
  padding:0px 7px 7px 7px 

#editorBtnBar
  padding-left: 10px

#record-form
  // border:1px 1px 0px 0px 
  border-bottom:1px
  border-top:1px
  border-right:0px
  border-left:0px
  border-style: solid
  border-color:#EEEEEE
  padding-top:10px
  padding-bottom:0px
  margin-bottom:7px

#record-list
  font-size:13px
  
.btnDiv-RecordLine
  height:20px
  top:-6px
  display:inline-block
  position:relative


#record-name
  margin:0
  width:100%

.resultActionOK
  color:green

.resultActionNOK
  color:red

#resultBtnBar
  position:absolute
  left:8px


.ui-layout-resizer-open:hover
  background white

#col-wrap > .ui-layout-resizer
  background-color: bgcolor
  border-right: 1px solid bgcolor
  border-left: 1px solid bgcolor

.ui-layout-resizer
  background-color: white
  border-right: 1px solid #eeeeee
  border-left: 1px solid #eeeeee
  
#col-wrap > .ui-layout-resizer > .ui-layout-toggler
  background-color: bgcolor
  border: 0px
  position: absolute
  right: 0px


#col-wrap > .ui-layout-resizer-open:hover .ui-layout-toggler
  background-color: #bbbbbb

.ui-layout-toggler
  background-color: white
  border: 0px
  position: absolute
  right: 0px

.ui-layout-resizer-open:hover .ui-layout-toggler
  background-color: #BFBFBF